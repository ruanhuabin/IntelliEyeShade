package action;

import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.util.logging.Logger;

import org.apache.struts2.ServletActionContext;

import entity.FocusDegree;

import service.FocusDegreeDAO;
import serviceimpl.FocusDegreeDAOImpl;

public class UserDetectAction extends SuperAction {
	
	//Attributes for test info upload
	private String userTestFileFileName;
	private String userTestFileContentType;
	private File userTestFile;

	
	private String detectFileUploadDir;
	
	private static final Logger logger = Logger.getLogger("MyLogger");

	
	
	
	public String getTestFileUploadDir() {
		return detectFileUploadDir;
	}



	public void setTestFileUploadDir(String testFileUploadDir) {
		this.detectFileUploadDir = testFileUploadDir;
	}



	public String getUserTestFileFileName() {
		return userTestFileFileName;
	}



	public void setUserTestFileFileName(String userTestFileFileName) {
		this.userTestFileFileName = userTestFileFileName;
	}



	public String getUserTestFileContentType() {
		return userTestFileContentType;
	}



	public void setUserTestFileContentType(String userTestFileContentType) {
		this.userTestFileContentType = userTestFileContentType;
	}



	public File getUserTestFile() {
		return userTestFile;
	}



	public void setUserTestFile(File userTestFile) {
		this.userTestFile = userTestFile;
	}

	public void saveUploadFile(String newFileName) {

		String path = ServletActionContext.getServletContext().getRealPath(
				detectFileUploadDir);

		logger.info("path = " + path);

		File dir = new File(path);
		if (!dir.exists())
			dir.mkdir();

		BufferedInputStream bis = null;
		BufferedOutputStream bos = null;
		logger.info("new File Name = " + newFileName);

		try {
			FileInputStream fis = new FileInputStream(this.userTestFileFileName);
			bis = new BufferedInputStream(fis);

			FileOutputStream fos = new FileOutputStream(new File(dir,
					newFileName));

			bos = new BufferedOutputStream(fos);

			byte[] buf = new byte[4096];

			int len = -1;

			while ((len = bis.read(buf)) != -1) {
				bos.write(buf, 0, len);
			}

		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			try {

				if (null != bis)
					bis.close();
			} catch (Exception e) {
				// TODO: handle exception
				e.printStackTrace();
			}

			try {

				if (null != bos)
					bos.close();
			} catch (Exception e2) {
				// TODO: handle exception
				e2.printStackTrace();
			}
		}

	}

	public String uploadDeviceDetectInfo()
	{
		
		String tid = request.getParameter("tid");
		logger.info("tid = " + tid);
		logger.info("testFileFilename = " + this.userTestFileFileName);
		
		
		if(tid == null)
		{
			request.setAttribute("DetectFileUploadResult", "Failed_TID_IS_NULL");
			return "detects_upload_detectinfo_failed";
		}
		String newFileName = tid;
		
		saveUploadFile(newFileName);
		
		String path = ServletActionContext.getServletContext().getRealPath(
				detectFileUploadDir);
		String fileToRead = path + "/" + newFileName;
		
		logger.info("fileToRead = " + fileToRead);
		
		FocusDegreeDAO fdao = new FocusDegreeDAOImpl();
		
		FocusDegree fd = fdao.getFocusDegreeInfo(tid);
		
		
		if(fd == null)
		{
			FocusDegree focusDegree = new FocusDegree();
			focusDegree.setTid(tid);
			focusDegree.setFocusValues("123 456 789");
			
			fdao.insertFocusDegreeInfo(focusDegree);
			
			request.setAttribute("DetectFileUploadResult", "Success_Insert");
			
		}
		
		
		
		
		
		return "detects_upload_detectinfo_success";
		
		
		
		
	}

}
